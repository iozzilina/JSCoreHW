<div class="col rank">
        <span>{{rank}}</span>
    </div>
<div class="col thumbnail">
    <a href="{{url}}" target="blank">
                <img src="{{imageUrl}}">
            </a>
</div>
<div class="post-content">
    <div class="title">
        <a href="{{url}}" target="blank">
                    {{title}}
                </a>
    </div>
    <div class="details">
        <div class="info">
            submitted {{age}} day ago by {{author}}
        </div>
        <div class="controls">
            <ul>
                <li class="action"><a class="commentsLink" href="#/postdetails/:{{_id}}">comments</a></li>
                {{#if isAuthor}}
                <li class="action"><a class="editLink" href="#/editpost/:{{_id}}">edit</a></li>
                <li class="action"><a class="deleteLink" href="#/deletepost/:{{_id}}">delete</a></li>
                {{/if}}
            </ul>
        </div>

    </div>
</div>